option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 30

files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/01-gamcapp-logs.conf":
    content: |
      /var/app/current/logs/*.log

commands:
  01_create_log_dir:
    command: "mkdir -p /var/app/current/logs"
  02_set_log_permissions:
    command: "chown webapp:webapp /var/app/current/logs"