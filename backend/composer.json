{
    "name": "gamcapp/backend",
    "description": "GAMCA Medical Appointment Booking System - PHP Backend",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "razorpay/razorpay": "^2.9",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Gamcapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamcapp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}